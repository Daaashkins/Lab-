1. #include <iostream>
#include <cmath>
using namespace std;

int main(){
    double N, a=0.1;
    cout<<"Введите N";
    cin>>N;
    for (int i=0;i<10;i++){
    cout<<"Стоимость "<<a<<"кг конфет = "<<a*N;
    cout<<"\n";
    a=a+0.1;
    }
    
    
}

2. #include <iostream>
#include <cmath>
using namespace std;

int main(){
    int N;
    double a=1, b=1.1;
    cout<<"Введите N";
    cin>>N;
    while (N>0){
        a=a*b;
        b=b+0.1;
        N=N-1;
    }
        
        
        
    cout<<"Произведение = "<<a;

    }
3.#include <iostream>
#include <cmath>
using namespace std;

int main(){
    int N;
    cout<<"Введите N";
    cin>>N;
    int rez = 0;
    int i;
    for (i = 1; i <= (2 * N - 1); i += 2) {
        rez += i;
        cout <<"Значение суммы "<<rez<<"\n";
 
    }
}
4.#include <iostream>
#include <cmath>
using namespace std;

int main(){
    int A, N;
    cout<<"Введите A, N";
    cin>>A>>N;
    int rez = 1;
    int i;
    for (i = 1; i <= N; i ++) {
        rez =rez+pow(A,i);
        cout <<"Значение суммы "<<rez<<"\n";
 
    }
}
5.#include <iostream>
#include <cmath>
using namespace std;

int main(){
    float A;
    int N;
    cout<<"Введите A, N";
    cin>>A>>N;
    float A2=1, rez = 1;
    int i;
    for (i = 2; i <= N; i ++) {
        A2=A2*(-A);
        rez=rez+A2;
 
    }
    cout <<"Значение суммы "<<rez<<"\n";
}
