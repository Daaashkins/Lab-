1.#include <iostream>
#include <math.h>
using namespace std;

int main(){
    int N, arr[100];
    cout<<"Введите N";
    cin>>N;
    cout<<"Введите массив";

    for(int i=0;i<N;i++){
        cin>>arr[i];
    }
    
    int k=0;
    for (int i=1;i<N;i++){
        if(arr[k]!=arr[i]){
           k++;
           arr[k]=arr[i];
        }
        
    }
    k++;

       
    cout<<"\n";    
    for(int i=0;i<k;i++){
        cout<<arr[i]<<" ";
    }


}

2.#include <iostream>
#include <math.h>
#include <vector>

using namespace std;

int main(){
    int N=5;
    vector <int> v;

    int  arr[5]={1, 1, 2, 3, 4};
    cout<<"Массив= ";
    for(int i=0;i<N;i++){
        cout<<arr[i]<<" ";
    }
    cout<<"\n ";

     for(int i=0;i<N;i++){
        v.push_back(arr[i]);{
        }
    }
     for(int i=0;i<N;i++){
         if(arr[i]==arr[i+1]){
         v.erase(v.begin() + i, v.begin() +i+2);

         }
    }

    cout<<"Размер массива= "<<v.size()<<"\n ";
    
    
        cout<<"Массив= ";
    for (int i = 0; i < v.size(); i++) {
        cout<< v[i] << " ";
        
    }


}

3.#include <stdio.h>
int main(void)
{
    int a[10];
    int n;
    printf("N: ");
    scanf("%i",&n);
 
    int i;
    for (i=0; i<n; ++i){
        printf("a[%i] : ",i+1);
        scanf("%i",&a[i]);
    }
 
    int amin=0,amax=0;
    for (i=0; i<n; ++i){
        if (a[amin]>a[i]) {
            amin=i;
        }
        if  (a[amax]<a[i]){
            amax=i;
        }
    }
    if (amax>amin) amax++;
 
    n++;
    for (i=n-1; i>=amin; --i) a[i]=a[i-1];
    a[amin]=0;
 
    n++;
    for (i=n-1; i>amax+1; --i) a[i]=a[i-1];
    a[amax+1]=0;
 
    for (i=0; i<n; ++i) printf("  %i: %i\n",i+1,a[i]);
 
    return 0;
}
4.#include <stdio.h>
int main(void)
{
    int a[20];
    int n;
    printf("N: ");
    scanf("%i",&n);
 
    int i;
    for (i=0; i<n; ++i){
        printf("a[%i] : ",i+1);
        scanf("%i",&a[i]);
    }
 
    int i2;
    for (i=n-1; i>=0; --i){
        if (a[i]<0){
            ++n;
            for(i2=n; i2>i; --i2) a[i2]=a[i2-1];
            a[i+1]=0;
        }
    }
 
    for (i=0; i<n;++i) printf("  %i: %i\n",i+1,a[i]);
 
    return 0;
}

5.#include <stdio.h>
int main(void)
{
    int a[20];
    int n;
    printf("N: ");
    scanf("%i",&n);
 
    int i;
    for (i=0; i<n; ++i){
        printf("a[%i] : ",i+1);
        scanf("%i",&a[i]);
    }
 
    int i2;
    for (i=n-1; i>=0; --i){
        if (a[i]>0){
            ++n;
            for(i2=n-1; i2>i; --i2) a[i2]=a[i2-1];
            a[i]=0;
        }
    }
 
    for (i=0; i<n;++i) printf("  %i: %i\n",i+1,a[i]);
 
    return 0;
}
